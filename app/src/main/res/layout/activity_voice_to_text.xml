<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transback"
    tools:context="com.example.shramona.transolve.VoiceToText">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/transback"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#e8e8e7"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="97dp"
                android:text="T  R  A  N  S  O  L  V  E"
                android:textColor="#2582C5"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#053b56"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/transback"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.16">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/first"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/help"
                    android:id="@+id/help"/>
                <TextView
                   android:layout_width="300dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="110dp"
                   android:text="Speak out your source"
                    android:textColor="#000000"
                    android:textAlignment="center"
                   android:textSize="20dp"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSpeechInput"
                    android:textAlignment="center"
                    android:hint=" If you want gps facility then press the button 'GO' after filling the remaining details "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="150dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="120dp"
                    android:id="@+id/btnSpeak"
                    android:background="@drawable/ico_mic"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:paddingLeft="150dp"
                    android:layout_marginTop="220dp"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:textAlignment="center"
                    android:text="Speak out your destination"
                    android:textColor="#000000"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/txtSpeechInput2"
                    android:textSize="20dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="260dp"
                    android:id="@+id/btnSpeak2"
                    android:background="@drawable/ico_mic"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="330dp"
                    android:text="Speak out your mode of transport"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSpeechInput3"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="345dp"
                    android:id="@+id/btnSpeak3"
                    android:background="@drawable/ico_mic"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:layout_width="190dp"
                    android:layout_height="38dp"
                    android:id="@+id/btnSpeak4"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn"
                    android:onClick="goHome"
                    android:text="GO"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_below="@+id/txtSpeechInput3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp" />



            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
